#!/usr/bin/env bash

set -e

echo
mlton
echo
make -version
echo
$CC --version
echo
if [[ "$MLTON_COMPILE_ARGS" == *"llvm"* ]]; then
llvm-as -version
opt -version
llc -version
echo
fi

MLTON_RUNTIME_ARGS="ram-slop 0.90"

echo "Building MLton..."
make CC="$CC" OLD_MLTON_RUNTIME_ARGS="$MLTON_RUNTIME_ARGS" MLTON_RUNTIME_ARGS="$MLTON_RUNTIME_ARGS" MLTON_COMPILE_ARGS="$MLTON_COMPILE_ARGS" all

if [ "$REGRESSION" == "true" ]; then
echo "Running regression tests..."
./bin/regression $MLTON_COMPILE_ARGS
fi
