structure Version =
   struct
      val version = "MLTONVERSION"
      val buildDate = "MLTONBUILDDATE"
      val buildNode = "MLTONBUILDNODE"

      val banner = concat ["MLton ", version,
                           " (built ", buildDate,
                           " on ", buildNode, ")"]
   end
